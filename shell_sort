void shell_sort(int arr[], int len) {
	int gap, i, j;
	int temp;
	for (gap = len >> 1; gap > 0; gap = gap >>= 1){//首先将gap取为len/2,此后每次折半，最终gap为1，但是有人推荐n/3+1作为间隔
		for (i = gap; i < len; i++) {
		temp = arr[i];
		for (j = i - gap; j >= 0 && arr[j] > temp; j -= gap) {
			arr[j + gap] = arr[j];
		}
		arr[j + gap] = temp;
		}
	}
}
